		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT DISTINCT(system.system_id), system.hostname, system.man_os_family, system.man_environment, sys_sw_database.db_version, sys_sw_database_details.details_instance, sys_sw_database_details.details_name, sys_sw_database_details.details_filename, sys_sw_database_details.details_current_size, date_format(sys_sw_database_details.details_creation_date,'%d/%m/%Y') as details_creation_date FROM system, oa_group_sys, sys_sw_database, sys_sw_database_details WHERE system.man_status = "production" AND system.system_id = oa_group_sys.system_id AND oa_group_sys.group_id = @group AND system.timestamp = sys_sw_database_details.timestamp AND system.system_id = sys_sw_database.system_id AND sys_sw_database.db_id = sys_sw_database_details.db_id ORDER BY system.hostname, sys_sw_database_details.details_name]]></report_sql>
