		<report_name>Reconciliation</report_name>
		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT oa_location.location_name, system.man_vm_group, system.system_id, system.hostname, system.pc_num_processor, system.man_environment, round(system.pc_memory / 1024 / 1024) as pc_memory, round(system.pc_memory / 1024 / 1024) as sru, system.man_ip_address, round(sum(partition_size / 1024)) AS partition_size FROM system LEFT JOIN oa_group_sys ON oa_group_sys.system_id = system.system_id LEFT JOIN oa_location ON system.man_location_id = oa_location.location_id LEFT JOIN sys_hw_partition ON (sys_hw_partition.system_id = system.system_id AND sys_hw_partition.timestamp = system.timestamp ) WHERE oa_group_sys.group_id = @group_id AND sys_hw_partition.partition_mount_type = 'partition' AND  sys_hw_partition.partition_mount_point > '' GROUP BY system.hostname ORDER BY system.hostname]]></report_sql>
